<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4sp">

    <TextView
        android:id="@+id/day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="MON"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/target_images"
        android:layout_width="15dp"
        android:layout_height="17dp"
        app:layout_constraintEnd_toEndOf="@+id/day_of_week"
        app:layout_constraintStart_toStartOf="@+id/day_of_week"
        app:layout_constraintTop_toBottomOf="@+id/day_of_week"
        app:srcCompat="@drawable/green" />

    <TextView
        android:id="@+id/history_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250cals"
        android:textSize="10sp"
        android:textColor="@color/caloriesLightGreen"
        app:layout_constraintEnd_toEndOf="@+id/day_of_week"
        app:layout_constraintStart_toStartOf="@+id/day_of_week"
        app:layout_constraintTop_toBottomOf="@+id/target_images" />

</androidx.constraintlayout.widget.ConstraintLayout>